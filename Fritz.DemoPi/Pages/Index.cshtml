@page
@model IndexModel
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Fritz.DemoPi</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Fritz.DemoPi.styles.css" asp-append-version="true" />
</head>
<body>

	<div id="cover" style="position:absolute; top: 0; left: 0; z-index:10; width:100%; height: 100%;">
	</div>

	<div id="counter" class="position-absolute top-50 start-50 translate-middle">
		-
	</div>


	<div id="currentSHA" class="position-absolute bottom-0 start-0 m-2 mb-3">
		Current SHA: ABC123
	</div>

	<div id="cxn" class="position-absolute bottom-0 end-0 m-2 p-2 rounded-pill">
		-
	</div>

	<script src="~/lib/microsoft-signalr/signalr.min.js"></script>
	<script src="~/js/site.js"></script>

</body>
</html>